{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "lib": ["es6", "dom"],
    // outFile :amd
    "module": "commonjs", // 'none', 'commonjs', 'amd', 'system', 'umd', 'es6','es2015', 'esnext'.
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  }
}
